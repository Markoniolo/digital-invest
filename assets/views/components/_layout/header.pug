-
  const headerMenu = [
    'О нас',
    'Кейсы',
    'Команда',
    'Преимущества',
    'Этапы работы',
    'Ответы на вопросы',
  ]

a.logo.magnetic(href='/')
  img.logo-image.magnetic-inner(src=staticImg('logo.svg') alt='')
header.header(data-element="header")
  .header__cont.cont
    .header__area
      .magnetic
        button.header__burger.magnetic-inner(type='button' data-element="header-burger")
      if VIEW === 'policy'
        button.header__back.text-medium.magnetic(type='button') Назад
      if VIEW === 'index'
        button.header__back-cases.magnetic(type='button' data-element="header__back-cases")
          span Назад
      .header__menu
        nav.header__nav
          ul.header__list
            each item in headerMenu
              li.header__item
                a.header__link.title.link-black(href="#")= item
        a.header__button.btn.btn-saturated(href='mailto:info@cifrinvest.ru') info@cifrinvest.ru
        button.header__button.btn.btn-black-arrow(data-role="modal-opener" data-modal-class="modal-order")
          span Оставить заявку
      .header__tg-box.magnetic
        a.header__tg.magnetic-inner(href='#' target='_blank')
